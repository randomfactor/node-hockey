doctype 5
html
    head
        meta(charset="utf-8")
        title= title
        link(rel='stylesheet', href='/css/bootstrap.css')
        != css('style')
    body
        block navbar
        .navbar.navbar-inverse.navbar-fixed-top
            .navbar-inner
                .container
                    a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.brand(href='/')= title
                    .nav-collapse.collapse
                        ul.nav
                            li.active
                                a(href='#/index') Home
                            li
                                a(href='#/play') Play Hockey
        block content
            #content

        block postscript
            script(src="js/libs/jquery-1.9.1.js")
            script(src="js/libs/handlebars-1.0.0-rc.4.js")
            script(src="js/libs/ember-1.0.0-rc.6.js")

        block foot
            .container
                hr
                footer
                    p Copyright &copy; (2012-3) Swamp Gas Software, Inc.
